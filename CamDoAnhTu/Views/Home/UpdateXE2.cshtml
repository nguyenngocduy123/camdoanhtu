

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CamDoAnhTu.Models.Customer

@section css{
    <link href="~/Assets/bootstrap-fileinput-master/css/fileinput.css" rel="stylesheet" />
    <link href="~/Assets/Simple-Date-Picker-for-Bootstrap/css/datepicker.css" rel="stylesheet" />
    <link href="~/Assets/silviomoreto-bootstrap-select-a8ed49e/dist/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Assets/jquery-ui-1.11.2.custom/jquery-ui.css" rel="stylesheet" />
}


<a class="btn btn-success" href="@Url.Action("LoadCustomerXE2","Home")" role="button">
    <i class="fa fa-mail-reply"></i>Trang khách hàng
</a>
<h2 style="font-size: 30px; color: red;border: firebrick">Chỉnh sửa thông tin khách hàng</h2>

<form class="form-horizontal" method="post" action="" id="frmaAddCustomer" enctype="multipart/form-data">
    @*<input type="hidden" class="form-control" id="txtStartDate" name="StartDate" value="@DateTime.Now" />*@
    <input type="hidden" class="form-control" id="txtDayPaids" name="DayPaids" value="@Model.DayPaids" />
    <input type="hidden" class="form-control" id="txtAmountPaid" name="AmountPaid" value="@Model.AmountPaid" />
    <input type="hidden" class="form-control" id="txtRemainingAmount" name="RemainingAmount" value="@Model.RemainingAmount" />
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <div class="alert alert-warning alert-dismissable hidden" role="alert">
                <button type="button" class="close" data-dissmiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Hình ảnh:</label>
        <input type="file" data-filename-placement="inside" id="fuMain" class="file" name="fuMain" />
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Mã số:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="txtCode" name="Code" value="@Model.Code" readonly="readonly" />
        </div>
        <label class="col-sm-2 control-label">Tên khách hàng:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="txtName" name="Name" value="@Model.Name" />
        </div>
        <label class="col-sm-2 control-label">Mã số cũ (nếu có):</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="OldCode" name="OldCode" value="@Model.OldCode" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Điện thoại:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="txtPhone" name="Phone" value="@Model.Phone" />
        </div>
        <label class="col-sm-2 control-label">Ngày bắt đầu:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="txtStartDate" name="StartDate" value="@Model.StartDate.ToShortDateString()" />
        </div>
        <label class="col-sm-2 control-label">Địa chỉ:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="txtAddress" name="Address" value="@Model.Address" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Tổng nợ:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control auto" id="txtLoan" name="Loan" value="@Model.Loan" readonly="readonly" />

        </div>
        <label class="col-sm-2 control-label">Số tiền trả trong 1 ngày:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control auto" name="Price" value="@Model.Price" readonly="readonly" />
        </div>
        <label class="col-sm-2 control-label">Số ngày được phép nợ thêm:</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="DayBonus" name="DayBonus" value="@Model.DayBonus" />
        </div>
    </div>
    <div>
        <label class="col-sm-2 control-label">Ghi chú:</label>
        @Html.TextAreaFor(e => e.Note, 10, 55, null)
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" id="save" class="btn btn-danger">
                <i class="fa fa-check"></i>&nbsp;Lưu
            </button>
        </div>
    </div>
</form>


